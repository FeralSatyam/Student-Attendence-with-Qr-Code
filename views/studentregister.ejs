<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Student Registration</title>
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body class="bg-zinc-900 text-white font-sans">
  <!-- Navbar -->
  <nav class="w-full bg-zinc-800 shadow-md">
    <div class="max-w-6xl mx-auto px-6 py-4 flex justify-between items-center">
      <h2 class="text-xl font-bold tracking-wide text-indigo-400">Attendance System</h2>
      <ul class="flex gap-6 text-sm font-medium">
        <li><a href="/" class="hover:text-indigo-400 transition">Home</a></li>
        <li><a href="/aboutus" class="hover:text-indigo-400 transition">About Us</a></li>
        <li><a href="/teacherlogin" class="hover:text-indigo-400 transition">Login as Teacher</a></li>
        <li><a href="/studentlogin" class="hover:text-indigo-400 transition">Login as Student</a></li>
      </ul>
    </div>
  </nav>

  <!-- Registration Section -->
  <section class="flex flex-col items-center justify-center h-[calc(100vh-80px)] px-6">
    <h1 class="text-3xl md:text-4xl font-extrabold mb-8">Register as <span class="text-indigo-400">Student</span></h1>
    
    <form class="bg-zinc-800 shadow-lg rounded-lg p-8 w-full max-w-md flex flex-col gap-5" action="/studentregister" method="post">
      <!-- Name -->
      <input 
        class="border border-gray-600 bg-zinc-900 text-white rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500 transition" 
        name="name" type="text" placeholder="Name" required>

      <!-- Course -->
      <label class="text-sm font-medium">Course:</label>
      <select 
        class="border border-gray-600 bg-zinc-900 text-white rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500 transition" 
        name="course" required>
        <option value="cs with ai">Computer Science with AI</option>
        <option value="cs with ds">Computer Science with Data Science</option>
      </select>

      <!-- Intake -->
      <label class="text-sm font-medium">Intake:</label>
      <select 
        class="border border-gray-600 bg-zinc-900 text-white rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500 transition" 
        name="intake" required>
        <option value="november">November</option>
        <option value="january">January</option>
      </select>

      <!-- Email -->
      <input 
        class="border border-gray-600 bg-zinc-900 text-white rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500 transition" 
        name="email" type="email" placeholder="Email" required>

      <!-- Password -->
      <input 
        class="border border-gray-600 bg-zinc-900 text-white rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500 transition" 
        name="password" type="password" placeholder="Password" required>

      <!-- Submit -->
      <input 
        class="bg-indigo-600 hover:bg-indigo-700 rounded-lg py-2 font-semibold cursor-pointer transition" 
        type="submit" value="Sign Up">
    </form>

    <!-- Already have account -->
    <div class="flex items-center gap-3 mt-6 text-gray-300">
      <p>Already have an account?</p>
      <form action="/studentlogin" method="get">
        <input 
          class="px-5 py-2 rounded-lg bg-yellow-600 hover:bg-yellow-700 text-black font-semibold cursor-pointer transition" 
          type="submit" value="Login">
      </form>
    </div>
  </section>
</body>
</html>